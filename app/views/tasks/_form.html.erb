<%= simple_form_for(@task, html: {class: 'form-signin'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :content, label: false, required: true, placeholder: 'Content' %>
  <%= f.button :submit, class: 'btn btn-primary btn-block' %>
  <%= link_to 'Back', tasks_path, class: 'btn btn-default btn-block' %>
<% end %>
