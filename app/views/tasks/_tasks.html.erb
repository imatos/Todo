<table class="table table-striped">
  <thead>
    <tr>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if tasks.empty? %>
    <tr>
      <td colspan="4"> No task found</td>
    </tr>
    <% else %>
      <% tasks.each do |task| %>
        <tr>
          <td><%= task.content %></td>
          <td>
            <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default' %>
            <%= link_to 'Destroy', task, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= render 'status_links', task: task %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
